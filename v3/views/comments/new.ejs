<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div style="width:30%; padding-top:100px; margin: 0 auto;">
            <h4 class="text-align:center"><strong>Add a Comment</strong></h4>
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group" style="padding-top:20px">
                    <input class="form-control" type="text" name="comment[text]" placeholder="comment">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text"  name="comment[author]" placeholder="author">
                </div>
                <div class="form-group">
                    <button class="btn btn-block btn-primary"> Submit </button>
                </div>    
            </form>
                <a href='/campgrounds'> Go Back</a>
        </div>
     </div>
</div>

<% include ../partials/footer %>